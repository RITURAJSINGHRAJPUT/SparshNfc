const toggleBtn = document.getElementById("toggleMode");

toggleBtn.addEventListener("click", () => {
  document.body.classList.toggle("light-mode");
  document.body.classList.toggle("dark-mode");
});

// Generate QR for your NFC profile URL
QR_CODE_LINK = "https://sparshnfc.com/profile/utsav"; // customize
QRCode.toCanvas(document.getElementById("qrcode"), QR_CODE_LINK, {
  color: {
    dark: "#d4af37",
    light: "#0000"
  },
  width: 180
});
